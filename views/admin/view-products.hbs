           <a href="/admin/add-product" class="btn btn-primary " style="width: 130px;"> Add products</a>  
             
           
        </div>
        <div class="row mt-5 pl-3">
          <a href="/admin/view-users" class="btn btn-info " style="width: 130px;"> Display users</a>  
             

        </div>
          
         
      </div>

   
    
</section>


